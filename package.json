{
  "name": "stepsyncai-health-apps",
  "version": "3.0.0",
  "description": "Health, wellness, and learning apps - Mental health support, medication tracker, and AWS learning",
  "main": "index.js",
  "scripts": {
    "mental": "node mental-health-tracker.js",
    "test-mental": "node test-mental-health-tracker.js",
    "med": "node medication-tracker.js",
    "test-med": "node test-medication-tracker.js",
    "aws": "node aws-for-kids.js",
    "test-aws": "node test-aws-for-kids.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:old": "npm run test-mental && npm run test-med && npm run test-aws"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!test-*.js",
      "!jest.config.js",
      "!coverage/**",
      "!chart-utils.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 45,
        "functions": 65,
        "lines": 55,
        "statements": 55
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "keywords": [
    "mental-health",
    "ptsd",
    "anxiety",
    "recovery",
    "workplace-accident",
    "medication",
    "tracker",
    "health",
    "wellness",
    "aws",
    "cloud",
    "learning",
    "education",
    "certification",
    "cloud-practitioner"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "jest": "^30.2.0"
  }
}
